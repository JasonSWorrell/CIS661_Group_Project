<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:Class="PG_GUI_Pretty_Good_GUI_.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25" 
            Padding="30,0" 
            VerticalOptions="Center">

            <telerik:RadToolbar x:Name="toolbar">
                <telerik:RadItemsControl x:Name="itemsControl" ItemsSource="{Binding Source}">
                    <telerik:RadItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackLayout>
                                <Label Text="{Binding Title}" />
                                <Label Text="{Binding SubTitle}" />
                            </StackLayout>
                        </DataTemplate>
                    </telerik:RadItemsControl.ItemTemplate>
                </telerik:RadItemsControl>
            </telerik:RadToolbar>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
