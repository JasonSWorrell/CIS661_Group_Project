<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frontend.MainPage">

    <ContentPage.MenuBarItems>
        <MenuBarItem Text="File">
            
            <MenuFlyoutItem Text="Open"
                            Command="{Binding OpenCommand}" />
            <MenuFlyoutItem Text="Save"
                            Command="{Binding SaveCommand}" />
            <MenuFlyoutItem Text="Exit"
                            Command="{Binding ExitCommand}" />
        </MenuBarItem>
        <MenuBarItem Text="Edit">
            <MenuFlyoutItem Text="Edit"
                            Command="{Binding EditCommand}"/>
        </MenuBarItem>
        <MenuBarItem Text="Settings">
            <MenuFlyoutSubItem Text="Display Modes">
                <MenuFlyoutItem Text="DarkMode"
                                Command="{Binding DarkModeCommand}"/>
                <MenuFlyoutItem Text="LightMode"
                                Command="{Binding LightModeCommand}" />
            </MenuFlyoutSubItem>
        </MenuBarItem>
           
        <MenuBarItem Text="Program">
            <MenuFlyoutItem Text="Run"
                            Command="{Binding RunCommand}" />
            <MenuFlyoutItem Text="Debug"
                            Command="{Binding DebugCommand}" />
        </MenuBarItem>
    </ContentPage.MenuBarItems>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Import Program"
                 IconImageSource="add.png" />
    </ContentPage.ToolbarItems>

